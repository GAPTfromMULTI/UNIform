<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="query">

<resultMap type="com.common.dao.LoginInfo" id="LoginInfoResult">
	<result column="ID" property="id"/>
	<result column="PASSWORD" property="password"/>
</resultMap>
	
<!-- 로그인 체크 쿼리 -->
	<select id="loginCheck" resultType="integer" parameterType="com.common.dao.LoginInfo">
		select count(*) from tb_account
		<where>
		id = #{id}
			AND
		password = #{password}
		</where>
	</select>
	
<!-- Select -->
	<select id="totalAccount" resultType="integer">
    	SELECT COUNT(*) FROM tb_account
    </select>
</mapper>
